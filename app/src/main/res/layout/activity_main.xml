<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTolDisplayMinus"
        android:layout_width="89dp"
        android:layout_height="42dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/tvDisplayMinus"
        app:layout_constraintEnd_toStartOf="@+id/tvDisplayMinus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvDisplayMinus" />

    <TextView
        android:id="@+id/tvTolDisplayPlus"
        android:layout_width="89dp"
        android:layout_height="42dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/tvDisplayPlus"
        app:layout_constraintEnd_toStartOf="@+id/tvDisplayPlus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvDisplayPlus" />

    <TextView
        android:id="@+id/tvDisplayPlus"
        android:layout_width="160dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"

        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTolDisplayPlus"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplay" />

    <TextView
        android:id="@+id/tvDisplayMinus"
        android:layout_width="160dp"
        android:layout_height="42dp"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"

        app:layout_constraintBottom_toTopOf="@+id/imgResistor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTolDisplayMinus"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplayPlus"
        app:layout_constraintVertical_bias="0.081" />

    <Button
        android:id="@+id/BtnBandTwo"
        android:layout_width="24dp"
        android:layout_height="69dp"
        android:background="#FFFFFF"
        android:onClick="Do_B2"
        android:text="2"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/BtnMul"
        app:layout_constraintEnd_toStartOf="@+id/BtnMul"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/BtnBandOne"
        app:layout_constraintTop_toTopOf="@+id/BtnMul"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/BtnMul"
        android:layout_width="24dp"
        android:layout_height="69dp"
        android:background="#FFFFFF"
        android:onClick="Do_MulB3"
        android:text="X"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/BtnTol"
        app:layout_constraintEnd_toStartOf="@+id/BtnTol"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/BtnBandTwo"
        app:layout_constraintTop_toTopOf="@+id/BtnTol"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgResistor"
        android:layout_width="305dp"
        android:layout_height="84dp"
        app:layout_constraintBottom_toTopOf="@+id/btnOrange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904"
        app:srcCompat="@drawable/resistor" />

    <Button
        android:id="@+id/BtnBandOne"
        android:layout_width="24dp"
        android:layout_height="69dp"
        android:layout_marginStart="100dp"
        android:background="#FFFFFF"
        android:onClick="Do_B1"
        android:text="1"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/BtnBandTwo"
        app:layout_constraintEnd_toStartOf="@+id/BtnBandTwo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BtnBandTwo"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/BtnTol"
        android:layout_width="24dp"
        android:layout_height="69dp"
        android:layout_marginEnd="100dp"
        android:background="#FFFFFF"
        android:onClick="Do_TolB4"
        android:text="T"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnOrange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/BtnMul"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.869" />

    <Button
        android:id="@+id/btnBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:onClick="Do_colourBlack"
        android:text="Black"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btnBrown"
        app:layout_constraintEnd_toStartOf="@+id/btnBrown"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#ffa500"
        android:onClick="Do_colourOrange"
        android:text="Orange"
        app:layout_constraintBottom_toTopOf="@+id/btnViolet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnRed" />

    <Button
        android:id="@+id/btnYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:onClick="Do_colourYellow"
        android:text="Yellow"
        app:layout_constraintBottom_toBottomOf="@+id/btnGreen"
        app:layout_constraintEnd_toStartOf="@+id/btnGreen"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:onClick="Do_colourBlue"
        android:text="Blue"
        app:layout_constraintBottom_toBottomOf="@+id/btnViolet"
        app:layout_constraintEnd_toStartOf="@+id/btnViolet"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnGreen" />

    <Button
        android:id="@+id/btnGold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFD700"
        android:onClick="Do_colourGold"
        android:text="Gold"
        app:layout_constraintBottom_toBottomOf="@+id/btnSilver"
        app:layout_constraintEnd_toStartOf="@+id/btnSilver"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnWhite" />

    <Button
        android:id="@+id/btnWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:onClick="Do_colourWhite"
        android:text="White"
        app:layout_constraintBottom_toBottomOf="@+id/btnGold"
        app:layout_constraintEnd_toStartOf="@+id/btnGold"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnGray" />

    <Button
        android:id="@+id/btnGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#808080"
        android:onClick="Do_colourGray"
        android:text="Gray"
        app:layout_constraintBottom_toBottomOf="@+id/btnWhite"
        app:layout_constraintEnd_toStartOf="@+id/btnWhite"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSilver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:background="#C0C0C0"
        android:onClick="Do_colourSilver"
        android:text="Silver"
        app:layout_constraintBottom_toTopOf="@+id/btnCalculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnGold" />

    <Button
        android:id="@+id/btnGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:onClick="Do_colourGreen"
        android:text="Green"
        app:layout_constraintBottom_toBottomOf="@+id/btnBlue"
        app:layout_constraintEnd_toStartOf="@+id/btnBlue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnYellow" />

    <Button
        android:id="@+id/btnViolet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#EE82EE"
        android:onClick="Do_colourViolet"
        android:text="Violet"
        app:layout_constraintBottom_toTopOf="@+id/btnSilver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnBlue" />

    <Button
        android:id="@+id/btnBrown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#993300"
        android:onClick="Do_colourBrown"
        android:text="Brown"
        app:layout_constraintBottom_toBottomOf="@+id/btnRed"
        app:layout_constraintEnd_toStartOf="@+id/btnRed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnBlack" />

    <Button
        android:id="@+id/btnRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:onClick="Do_colourRed"
        android:text="Red"
        app:layout_constraintBottom_toBottomOf="@+id/btnOrange"
        app:layout_constraintEnd_toStartOf="@+id/btnOrange"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnBrown" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:onClick="DoReset"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="@+id/btnCalculate"
        app:layout_constraintEnd_toStartOf="@+id/btnCalculate"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnCalculate" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:onClick="DoCalculate"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnReset"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="160dp"
        android:layout_height="42dp"

        android:layout_marginTop="24dp"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTolDisplay"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tvTolDisplay"
        android:layout_width="89dp"
        android:layout_height="42dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/tvDisplay"
        app:layout_constraintEnd_toStartOf="@+id/tvDisplay"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvDisplay" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resistor Calculator"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold|italic"
        android:typeface="serif"
        app:layout_constraintBottom_toTopOf="@+id/imgResistor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

</androidx.constraintlayout.widget.ConstraintLayout>